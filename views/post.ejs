    <div class="row">
      <div class="col-sm-3">
        <div >
          <h2>
            Patient's information
          </h2>
          <img class="img-fluid" src="<%= post.image%>" />
          <p>
            Added by: <%= user.userName %>
          </p>
          <p>
            Name: <%= post.title %>
          </p>
          <p>
            <%= post.date %>
          </p>
          <p>
            <%= post.time %>
          </p>
          <p>
            <%= post.cell %>
          </p>
        </div>
        <form class="" action="/post/likePost/<%= post.id %>?_method=PUT" method="POST">
          <button class="btn btn-primary fa fa-check" type="submit"></button>
        </form>
        <h3 class="klk"">Check in YTD: <%= post.likes %>
        </h3>
        <%if(post.user==user.id){ %>
          <form action="/post/deletePost/<%= post.id %>?_method=DELETE" method="POST" class="col-5">
            <button class="btn btn-primary fa fa-trash" type="submit"></button>
          </form>
          <%}%>
      </div>

      <div class="col-sm-3">
        <h3>Add private notes</h3>
        <form action="/comment/createComment/<%=post._id %>?_method=POST" method="POST">
          <input type="text" class="form-control" id="comment" name="comment">
          <button type="submit" class="btn btn-primary">Add Comment</button>
          <a class="btn btn-primary" href="/profile">Return to Profile</a>
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </form>
      </div>
      <div class="col-sm-3">
        <p>
          PRIVATE NOTES to be read my peter parker
        </p>
        <ul>
          <% for(var i=0; i<comments.length; i++) {%>
            <li class='col-6 justify-content-between mt-5'>
              <%= comments[i].comment%>
            </li>
            <% } %>
        </ul>
      </div>
      <div class="col-sm-3">
        <p>
          Messages sent
        </p>

        <p>
          <%= post.caption %>
            <form action="/sms/createText" method="POST" enctype="multipart/form-data" method="POST">
              <button>Send Sms</button>
            </form>
            <form action="/call/createCall" method="POST" enctype="multipart/form-data" method="POST">
              <button>Call</button>
            </form>
      </div>
